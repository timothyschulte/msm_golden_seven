<div>
  <h1>Actors</h1>
</div>

<p><a href="/actors/new_form">Add a New Actor</a></p>

<table>
  <thead>
    <tr>
      <th>Image URL</th>
      <th>DOB</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>"></td>
        <td><%= actor.dob %></td>
        <td><%= actor.name %></td>
        <td><%= truncate(actor.bio) %></td>
        <td>
          <a href="/actors/<%= actor.id %>">
          </a>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>/edit_form">
          </a>
        </td>
        <td>
          <a href="/delete_actor/<%= actor.id %>">
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>