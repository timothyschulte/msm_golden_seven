<div>
  <h1>Add Actor</h1>
</div>

<form action="/create_actor">

  <div>
    <label for="dob">
      Dob
    </label>
    <div>
      <input type="text" id="dob" name="dob" placeholder="Dob">
    </div>
  </div>

  <div>
    <label for="name">
      Name
    </label>
    <div>
      <input type="text" id="name" name="name" placeholder="Name">
    </div>
  </div>

  <div class="form-group">
    <label for="bio">
      Bio
    </label>
    <div>
      <textarea id="bio" name="bio" placeholder="Bio"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label>
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="Image url">
    </div>
  </div>

  <div class="form-group">
    <div>
      <input type="submit" value="Create Actor">
    </div>
  </div>
</form>